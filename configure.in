AC_INIT(src/main.cs)

AM_CONFIG_HEADER(config.h)

AM_INIT_AUTOMAKE(f-spot, 0.0)

AM_MAINTAINER_MODE

AC_PROG_INTLTOOL([0.21])

AC_PROG_CC
AC_ISC_POSIX
AC_HEADER_STDC
AM_PROG_LIBTOOL

GNOME_COMPILE_WARNINGS
AM_PATH_GLIB_2_0


dnl --- Required libraries

LIBGNOME_REQUIRED=2.4
LIBGNOMEUI_REQUIRED=2.4
LIBEXIF_REQUIRED=0.5.7
dnl LIBGPHOTO2_REQUIRED=2.1.1

PKG_CHECK_MODULES(F, libgnome-2.0 >= $LIBGNOME_REQUIRED libgnomeui-2.0 >= $LIBGNOMEUI_REQUIRED libexif >= $LIBEXIF_REQUIRED)
AC_SUBST(F_CFLAGS)
AC_SUBST(F_LIBS)


dnl --- GConf

AC_PATH_PROG(GCONFTOOL, gconftool-2, no)
AM_GCONF_SOURCE_2


dnl --- libjpeg

AC_CHECK_LIB(jpeg, jpeg_start_decompress, [],
	     [AC_MSG_ERROR([libjpeg not found])], -lm)
AC_CHECK_HEADER(jpeglib.h, , [AC_MSG_ERROR([libjpeg not found])])
LIBJPEG='-ljpeg'


dnl --- GNOME thumbnailing code (libgnomeui 2.1.x)
dnl FIXME remove check

AC_CHECK_HEADERS(libgnomeui/gnome-thumbnail.h)
AM_CONDITIONAL(LIBGNOMEUI_HAVE_GNOME_THUMBNAIL_H, test x$ac_cv_header_libgnomeui_gnome_thumbnail_h = xtrue)


dnl --- Set up paths

ICONS_DIRECTORY=${datadir}/${PACKAGE}-${VERSION}

AC_SUBST(ICONS_DIRECTORY)


dnl --- Prologue

AC_SUBST(LIBJPEG)
AC_SUBST(CFLAGS)
AC_SUBST(CPPFLAGS)
AC_SUBST(LDFLAGS)

AC_OUTPUT([
Makefile
icons/Makefile
libeog/Makefile
libeog/cursors/Makefile
libjpegtran/Makefile
libfspot/Makefile
src/makefile
])
